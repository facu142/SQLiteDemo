<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteDemo.Views.AddUpdateStudentDetail"
             Title="Add/Update Student Detail">
    <VerticalStackLayout Margin="10">
        <Label Text="First Name" FontSize="16"/>
        <Entry Placeholder="First Name"/>
        <BoxView HeightRequest="0.8" Color="Grey"/>

        <Label Text="Last Name" FontSize="16"/>
        <Entry Placeholder="Last Name"/>
        <BoxView HeightRequest="0.8" Color="Grey"/>

        <Label Text="Email" FontSize="16"/>
        <Entry Placeholder="Email"/>
        <BoxView HeightRequest="0.8" Color="Grey"/>
        
    </VerticalStackLayout>
</ContentPage>